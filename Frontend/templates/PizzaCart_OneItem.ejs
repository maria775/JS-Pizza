<div class="row">
    <div class="one-ordered-pizza-template">
    <img class="half-of-pizza" alt="Піца" src="<%= pizza.icon%>">
    <p class="bold pizza-title" style="margin: 0 0 10px;">
        <span class="order-title"><%= pizza.title %> (<%= size %>)</span>
    </p>
    <div class="order-text">
        <img class="radius-image" src="../../www/assets/images/size-icon.svg">
        <span><%= pizza[size].size %></span>
        <img class="weight-image" src="../../www/assets/images/weight.svg">
        <span><%= pizza[size].weight %></span>
    </div>

    <div class="quantity-regulation-section">
        <span class="price"><%= (pizza[size].price * quantity) %></span>
        <a class="minus btn btn-xs btn-danger btn-circle" href="#">
            <i class="glyphicon glyphicon-minus icon-white">
            </i>
        </a>
        <span class="label order-pizza-count" style="color:black;"><%= quantity %></span>
        <a class="plus btn btn-xs btn-success btn-circle" href="#">
            <i class="glyphicon glyphicon-plus icon-white">

            </i>
        </a>
        <a class="count-clear btn btn-xs btn-default btn-circle remove" href="#">
            <i class="glyphicon glyphicon-remove icon-white">

            </i>
        </a>
    </div>

</div>
</div>
